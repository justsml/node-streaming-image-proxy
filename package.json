{
  "name": "streaming-image-proxy",
  "version": "1.0.0",
  "description": "Node.js streaming image & media proxy",
  "main": "src/index.ts",
  "scripts": {
    "test": "vitest",
    "start": "NODE_ENV=production tsx src/index.ts",
    "dev": "tsx watch src/index.ts",
    "start:static": "npx serve -p 8000 --no-port-switching ./static",
    "bun:start": "NODE_ENV=production bun run src/index.ts",
    "bun:dev": "bun watch src/index.ts",
    "docker:build": "docker build -t node-streaming-image-proxy .",
    "docker:run": "docker run --name img-proxy --rm -p 3000:3000 -d node-streaming-image-proxy",
    "docker:stop": "docker stop img-proxy"    
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "helmet": "^7.1.0",
    "libsql": "^0.3.4",
    "morgan": "^1.10.0",
    "pino": "^8.19.0",
    "pino-http": "^9.0.0",
    "pino-pretty": "^10.3.1",
    "sharp": "^0.33.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.24",
    "@types/supertest": "^6.0.2",
    "supertest": "^6.3.4",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  }
}
